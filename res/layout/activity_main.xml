<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- 底部菜单 -->

        <RelativeLayout
            android:id="@+id/layout_bar2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#dcdcdc" />

            <LinearLayout
                android:id="@+id/layout_bar"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/main_layout_tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab1"
                        android:layout_width="42dip"
                        android:layout_height="32dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab1" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab2"
                        android:layout_width="42dip"
                        android:layout_height="32dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab2" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab3"
                        android:layout_width="42dip"
                        android:layout_height="32dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab3" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab4"
                        android:layout_width="42dip"
                        android:layout_height="32dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab5"
                        android:layout_width="42dip"
                        android:layout_height="32dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab5" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/layout_bar2" >
        </FrameLayout>
    </RelativeLayout>

</TabHost>
<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- 底部菜单 -->

        <RelativeLayout
            android:id="@+id/layout_bar2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#dcdcdc" />

            <LinearLayout
                android:id="@+id/layout_bar"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/main_layout_tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab1"
                        android:layout_width="46dip"
                        android:layout_height="35dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab1" />

                    <ImageView
                        android:id="@+id/main_imgv_dian1"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/bg_msg_dot"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab2"
                        android:layout_width="46dip"
                        android:layout_height="35dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab2" />

                    <ImageView
                        android:id="@+id/main_imgv_dian2"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/bg_msg_dot"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab3"
                        android:layout_width="46dip"
                        android:layout_height="35dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab3" />

                    <ImageView
                        android:id="@+id/main_imgv_dian3"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/bg_msg_dot"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab4"
                        android:layout_width="46dip"
                        android:layout_height="35dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab4" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_layout_tab5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/main_imgv_tab5"
                        android:layout_width="46dip"
                        android:layout_height="35dip"
                        android:layout_centerInParent="true"
                        android:background="@drawable/tabbar_tab5" />

                    <ImageView
                        android:id="@+id/main_imgv_dian5"
                        android:layout_width="5dip"
                        android:layout_height="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/bg_msg_dot"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/layout_bar2" >
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/promotion_ly_name_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#66000000"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/promotion_ly_name_show"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:background="@drawable/bg_tanchu" >

                <EditText
                    android:id="@+id/promotion_et_name"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="50dip"
                    android:background="@drawable/bg_tanchu_edit"
                    android:hint="请输入邮箱地址"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:singleLine="true"
                    android:textColor="#2d2d2d"
                    android:textColorHint="#adadad"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/promotion_btn_ok"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_marginBottom="50dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="#0000FF"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="1px"
                        android:layout_height="fill_parent"
                        android:background="#e3e2e2" />

                    <TextView
                        android:id="@+id/promotion_btn_cancel"
                        android:layout_width="fill_parent"
                        android:layout_height="50dip"
                        android:layout_marginBottom="50dip"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#0000FF"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dip"
                    android:background="#e3e2e2" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</TabHost>
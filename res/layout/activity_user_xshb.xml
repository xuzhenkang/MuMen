<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/layout_navigation" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/header_imgv_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_activity_banner" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dip"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/header_imgv_icon"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_sales_picture" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/xshb_layout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="150dip" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/bg_forms_xshb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/xshb_txt_date"
                            android:layout_width="fill_parent"
                            android:layout_height="50dip"
                            android:gravity="center"
                            android:textColor="#f5a671"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />

                        <LinearLayout
                            android:id="@+id/xshb_layout_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/xshb_btn_ok"
                            android:layout_width="267dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dip"
                            android:background="@drawable/btn_tibao" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:gravity="center"
                            android:text="每日只可填写前一日工作销量，错过日期后果自负"
                            android:textColor="#3d4458"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include layout="@layout/layout_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="50dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/promotion_txt_tab1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动指导"
                android:textColor="#f5a671"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/promotion_txt_tab2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动现场"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/promotion_txt_tab3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动案例"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/promotion_txt_tab4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宣传物料"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#bfbfbf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/promotion_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/promotion_pull_down_view1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/promotion_layout_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/promotion_pull_down_view3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/promotion_layout_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/promotion_pull_down_view4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/promotion_layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg_activity" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/promotion_txt_huodong_title"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="#090a0c"
                android:textSize="18dip" />

            <RelativeLayout
                android:id="@+id/promotion_layout_huodong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="50dip" >

                <ImageView
                    android:id="@+id/promotion_imgv_huodong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_default_activity"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_play" />
            </RelativeLayout>

            <TextView
                android:id="@+id/promotion_txt_title"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_below="@id/promotion_layout_huodong"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="20dip"
                android:text="活动介绍"
                android:textColor="#333333"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/promotion_txt_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/promotion_txt_title"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dip"
                android:paddingRight="20dip"
                android:text=""
                android:textColor="#555555"
                android:textSize="14dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_alignParentBottom="true" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dip"
                    android:background="#e0e0e0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:text="查看全文"
                    android:textColor="#757575"
                    android:textSize="14dip" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/data_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/nodata" />

                <TextView
                    android:id="@+id/error_nodata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dip"
                    android:text="当前无现场活动"
                    android:textColor="#aeaeae"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
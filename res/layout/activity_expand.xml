<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include layout="@layout/layout_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="50dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/expand_txt_tab1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="装修标准"
                android:textColor="#f5a671"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/expand_txt_tab3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="落地案例"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/expand_txt_tab4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我要升级"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#bfbfbf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expand_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/expand_pull_down_view1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expand_layout_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/expand_pull_down_view3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expand_layout_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/expand_layout_4_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="请认真填写好申请表单"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/wysj_layout_bg"
                        android:layout_width="match_parent"
                        android:layout_height="100dip"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/bg_activity" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/wysj_layout_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dip" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dip"
                                    android:text="上传："
                                    android:textColor="#757575"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/expand_imgv_photo"
                                    android:layout_width="114dip"
                                    android:layout_height="40dip"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="120dip"
                                    android:background="@drawable/btn_upload" />
                            </RelativeLayout>

                            <ImageButton
                                android:id="@+id/expand_btn_ok"
                                android:layout_width="267dip"
                                android:layout_height="40dip"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dip"
                                android:background="@drawable/btn_tijiao" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="10dip" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include layout="@layout/layout_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="50dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sales_txt_tab1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新品速递"
                android:textColor="#f5a671"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/sales_txt_tab3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="业主案例"
                android:textColor="#757575"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="14dip"
                android:layout_gravity="center_vertical"
                android:background="#757575" />

            <TextView
                android:id="@+id/sales_txt_tab4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="销售技巧"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#bfbfbf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/sales_pull_down_view1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_layout_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/sales_pull_down_view3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_layout_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:visibility="gone" >

        <com.uesugi.mumen.pulldown.PullDownView
            android:id="@+id/sales_pull_down_view4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.uesugi.mumen.pulldown.PullDownView>
    </RelativeLayout>

</RelativeLayout>